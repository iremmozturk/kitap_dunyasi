{
  "version": 2,
  "projects": [
    {
      "name": "kitap_dunyasi_frontend",
      "src": "frontend/",
      "buildCommand": "npm run build",
      "outputDirectory": "build",
      "routes": [
        {
          "src": "/(.*)",
          "dest": "/index.html"
        }
      ]
    },
    {
      "name": "kitap_dunyasi_backend",
      "src": "backend/",
      "buildCommand": "npm install && npm run build",
      "outputDirectory": ".",
      "functions": {
        "api/*": {
          "runtime": "nodejs16.x"
        }
      },
      "routes": [
        {
          "src": "/api/(.*)",
          "dest": "/api/$1"
        }
      ]
    }
  ]
}
